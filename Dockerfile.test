FROM node:22-alpine

# Install dependencies
RUN apk add --no-cache python3 make g++ bash wget

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy built files
COPY dist/ ./dist/

# Copy run script (simplified for testing)
COPY <<'EOF' /run.sh
#!/bin/bash
export LOG_LEVEL="${LOG_LEVEL:-info}"
export CACHE_TTL_SECONDS="${CACHE_TTL_SECONDS:-60}"
export AUTH_REQUIRED="${AUTH_REQUIRED:-false}"
export SUPERVISOR_TOKEN="${SUPERVISOR_TOKEN}"

echo "Starting HA MCP Intelligence Server..."
echo "Log level: ${LOG_LEVEL}"
echo "Cache TTL: ${CACHE_TTL_SECONDS}s"

cd /app
exec node dist/index.js
EOF

RUN chmod +x /run.sh

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3123/health || exit 1

EXPOSE 3123

CMD [ "/run.sh" ]
